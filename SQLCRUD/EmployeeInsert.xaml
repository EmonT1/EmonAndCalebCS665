                </Grid>
                
            </TabItem>
            <TabItem Header="TimeEntries">
                <Grid>
                    <TextBox Name="TEIDtxt" HorizontalAlignment="Left" Height="26" Margin="48,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="86"/>
                    <Button  x:Name="InsertbtnTE" Content="Insert" HorizontalAlignment="Left" Height="22" Margin="235,168,0,0" VerticalAlignment="Top" Width="83" Click="Insertbtn_click"/>
                    <Label Content="Time Entries ID" HorizontalAlignment="Left" Height="26" Margin="139,52,0,0" VerticalAlignment="Top" Width="93"/>

                    <Label Content="Priority Level" HorizontalAlignment="Left" Height="26" Margin="139,127,0,0" VerticalAlignment="Top" Width="77"/>
                    <TextBox Name="TaskLeadtxt" HorizontalAlignment="Left" Height="26" Margin="48,164,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="86"/>
                    <Label Content="Task Lead" HorizontalAlignment="Left" Height="26" Margin="139,164,0,0" VerticalAlignment="Top" Width="77"/>

                </Grid>

            </TabItem>


        </TabControl>
        
        

    </Grid>

                    <Label Content="Last Name " HorizontalAlignment="Left" Height="26" Margin="139,127,0,0" VerticalAlignment="Top" Width="77"/>
                    <TextBox Name="Departmenttxt" HorizontalAlignment="Left" Height="26" Margin="48,164,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="86"/>
                    <Label Content="Department" HorizontalAlignment="Left" Height="26" Margin="139,164,0,0" VerticalAlignment="Top" Width="77"/>
                   
                </Grid>


            </TabItem>
            <TabItem Header="TimeCards">

                <Grid>
                    <TextBox Name="TCIDtxt" HorizontalAlignment="Left" Height="26" Margin="48,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="86"/>
